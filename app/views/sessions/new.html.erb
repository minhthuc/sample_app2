<% provide :title, t(".log_in") %>
<div class="top-content" style="background-image: url(<%= asset_path "1.jpg" %>)">

  <div class="inner-bg">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text">
          <h1><strong>Bootstrap</strong> Login Form</h1>
          <div class="description">
            <p>
              This is a free responsive login form made with Bootstrap.
              Download it on <a href="http://azmind.com"><strong>AZMIND</strong>
            </a>, customize and use it as you like!
            </p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 form-box">
          <div class="form-top">
            <div class="form-top-left">
              <h3>Login to our site</h3>
              <p>Enter your username and password to log on:</p>
            </div>
            <div class="form-top-right">
              <i class="fa fa-lock"></i>
            </div>
          </div>
          <div class="form-bottom">
            <%= form_for :session, class: "login-form", url: login_path do
            |f| %>
                <div class="form-group">
                  <label class="sr-only" for="form-username">Username</label>
                  <%= f.label :email, class:"sr-only" %>
                  <%= f.email_field :email, class:"form-username form-control",
                                    id: "form-username", placeholder: :email %>
                </div>
                <div class="form-group">

                </div>
                <%= link_to t(".forgot_password"), new_password_reset_path %>
                <div class="form-group">
                  <%= f.label :password, class: "sr-only" %>
                  <%= f.password_field :password,
                                       class: "form-password form-control", placeholder: :password %>
                </div>
                <%= f.label :remember_me, class: "checkbox inline" do %>
                    <%= f.check_box :remember_me, class: "session-remember-me" %>
                    <span><%= t ".remember_me" %></span>
                <% end %>
                <%= f.submit t(".log_in"), class: "btn btn-primary" %>
            <% end %>
            <p>
              <%= t ".new_user" %> <%= link_to t("static_pages.home.sign_up"),
                                               signup_path %>
            </p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 social-login">
          <h3>...or login with:</h3>
          <div class="social-login-buttons">
            <a class="btn btn-link-2" href="#">
              <i class="fa fa-facebook"></i> Facebook
            </a>
            <a class="btn btn-link-2" href="#">
              <i class="fa fa-twitter"></i> Twitter
            </a>
            <a class="btn btn-link-2" href="#">
              <i class="fa fa-google-plus"></i> Google Plus
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

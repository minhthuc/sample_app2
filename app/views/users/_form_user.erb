<div class="top-content" style="background-image: url(<%= asset_path "1.jpg" %>)">
  <div class="inner-bg">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text">
          <h1> Sign up Form</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 form-box">
          <div class="form-top">
            <div class="form-top-left">
              <h3>Sign up to our site</h3>
              <p>Enter your username and password to Sign up:</p>
            </div>
            <div class="form-top-right">
              <i class="fa fa-lock"></i>
            </div>
          </div>
          <div class="form-bottom">
            <%= form_for user, class: "login-form" do |f| %>
                <div class="form-group">
                  <%= f.label :name, class:"sr-only" %>
                  <%= f.email_field :name, class:"form-username form-control",
                                    id: "form-username", placeholder: :name %>
                </div>
                <div class="form-group">
                  <%= f.label :email, class:"sr-only" %>
                  <%= f.email_field :email, class:"form-username form-control",
                                    id: "form-username", placeholder: :email %>
                </div>
                <div class="form-group">
                  <%= f.label :password, class:"sr-only" %>
                  <%= f.email_field :password, class:"form-username form-control",
                                    id: "form-username", placeholder: :password%>
                </div>
                <div class="form-group">
                  <%= f.label :password_confirmation, class:"sr-only" %>
                  <%= f.email_field :password_confirmation, class:"form-username form-control",
                                    id: "form-username", placeholder: :password_confirmation %>
                </div>
                <%= f.submit button_name, class:"btn btn-primary" %>
            <% end %>
            <p>
              <%= t ".new_user" %> <%= link_to t("static_pages.home.sign_up"), signup_path %>
            </p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 social-login">
          <h3>...or login with:</h3>
          <div class="social-login-buttons">
            <a class="btn btn-link-2" href="#">
              <i class="fa fa-facebook"></i> Facebook
            </a>
            <a class="btn btn-link-2" href="#">
              <i class="fa fa-twitter"></i> Twitter
            </a>
            <a class="btn btn-link-2" href="#">
              <i class="fa fa-google-plus"></i> Google Plus
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




<% provide :title, t(".edit_user") %>
<h1><%= t ".update_profile" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form_user", user: @user, button_name: t("users.edit.save") %>
    <div class="gravatar-edit">
      <%= gravatar_for @user %>
      <%= link_to t("users.edit.change"), "http://gravatar.com/emails", target: "_blank" %>
    </div>
  </div>
</div>

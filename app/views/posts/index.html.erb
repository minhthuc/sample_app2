<div class="row">
  <% if logged_in? %>
  <aside class="col-md-4">
    <section class="user_info">
      <%= render "shared/user_info" %>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
    <section class="micropost_form">
      <%= render "shared/post_form", post: @post %>
    </section>
  </aside>
  <% end %>
  <div class="col-lg-8">
    <% if @posts.any? %>
      <ul class="users">
        <%= render @posts %>
      </ul>
    <% end %>
    <%= will_paginate @posts %>
  </div>
</div>


